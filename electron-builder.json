{
  "appId": "com.koliseuot.launcher",
  "productName": "KoliseuOT Launcher",
  "artifactName": "${productName}-Setup-${version}.${ext}",
  "directories": {
    "output": "out",
    "buildResources": "build"
  },
  "files": [
    "dist/**/*",
    "dist-electron/**/*",
    "package.json"
  ],
  "publish": {
    "provider": "github",
    "owner": "JoaoCRDias",
    "repo": "koliseu-launcher"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "build/icon.png",
    "signingHashAlgorithms": [
      "sha256"
    ],
    "sign": null
  },
  "nsis": {
    "oneClick": true,
    "perMachine": false,
    "allowElevation": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "KoliseuOT Launcher",
    "artifactName": "KoliseuOT-Launcher-Setup-${version}.${ext}"
  },
  "mac": {
    "target": "dmg",
    "icon": "build/icon.icns",
    "category": "public.app-category.games"
  },
  "linux": {
    "target": [
      "AppImage",
      "deb"
    ],
    "icon": "build/icon.png",
    "category": "Game"
  }
}